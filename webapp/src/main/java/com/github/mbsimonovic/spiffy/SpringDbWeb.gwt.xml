<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 0.0.999//EN"
        "http://google-web-toolkit.googlecode.com/svn/tags/2.4.0/distro-source/core/src/gwt-module.dtd">
<module rename-to='springdb'>
    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.google.gwt.user.History"/>
    <inherits name='com.google.gwt.user.theme.chrome.Chrome'/>

    <inherits name='com.google.gwt.activity.Activity'/>
    <inherits name='com.google.gwt.place.Place'/>
    <inherits name="com.google.gwt.inject.Inject"/>

    <inherits name="org.spiffyui.spiffyui"/>

    <inherits name='com.google.gwt.logging.Logging'/>
    <set-property name="gwt.logging.enabled" value="TRUE"/>
    <set-property name="gwt.logging.logLevel" value="INFO"/>
    <!--only be seen in Development Mode:-->
    <set-property name="gwt.logging.systemHandler" value="ENABLED"/>
    <!--calls to GWT.log-->
    <set-property name="gwt.logging.developmentModeHandler" value="DISABLED"/>
    <!--Logs to the javascript console-->
    <set-property name="gwt.logging.consoleHandler" value="DISABLED"/>
    <set-property name="gwt.logging.firebugHandler" value="DISABLED"/>
    <!--use status bar for messages?-->
    <set-property name="gwt.logging.hasWidgetsHandler" value="DISABLED"/>
    <set-property name="gwt.logging.popupHandler" value="DISABLED"/>
    <!--TODO enable remote handler-->
    <set-property name="gwt.logging.simpleRemoteHandler" value="DISABLED"/>

    <!--<set-property name="user.agent" value="gecko"/>	-->
    <!-- English language only -->
    <extend-property name="locale" values="default"/>

    <entry-point class='com.github.mbsimonovic.spiffy.client.SpringDB'/>

    <source path='client'/>
</module>
