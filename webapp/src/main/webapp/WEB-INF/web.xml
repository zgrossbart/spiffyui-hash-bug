<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>hash_bug</display-name>

    <filter>
        <filter-name>HostPageFilter</filter-name>
        <filter-class>com.github.mbsimonovic.spiffy.server.HostPageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>HostPageFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
